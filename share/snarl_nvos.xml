<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<!--
        Copyright 2012 Project FiFo / Heinz N. Gies
-->

<service_bundle type='manifest' name='snarl'>
  <service
    name='network/snarl'
    type='service'
    version='0.3.0'>
    <create_default_instance enabled='false' />
    <single_instance />
    <dependency
	name='net-loopback'
	grouping='require_all'
	restart_on='none'
	type='service'>
      <service_fmri value='svc:/network/loopback' />
    </dependency>

    <dependency
	name='net-physical'
	grouping='require_all'
	restart_on='none'
	type='service'>
      <service_fmri value='svc:/network/physical' />
    </dependency>

    <dependency
	name='fs'
	grouping='require_all'
	restart_on='none' type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>

    <exec_method
      type='method'
      name='start'
      exec='/opt/local/fifo-snarl/bin/snarl %m'
      timeout_seconds='30'>
      <method_context>
	<method_credential user='snarl' group='snarl' />
	<method_environment>
	  <envvar name='PATH' value='/usr/gnu/bin:/usr/bin:/usr/sbin'/>
	  <envvar name='HOME' value='/var/db/snarl'/>
	</method_environment>
      </method_context>
    </exec_method>

    <exec_method
	name='restart'
	type='method'
        exec='/opt/local/fifo-snarl/bin/snarl %m'
	timeout_seconds='60'>
      <method_context>
	<method_credential user='snarl' group='snarl' />
	<method_environment>
	  <envvar name='PATH' value='/usr/gnu/bin:/usr/bin:/usr/sbin'/>
	  <envvar name='HOME' value='/var/db/snarl'/>
	</method_environment>
      </method_context>
    </exec_method>

    <exec_method
	name='stop'
	type='method'
        exec='/opt/local/fifo-snarl/bin/snarl %m'
	timeout_seconds='60'>
      <method_context>
	<method_credential user='snarl' group='snarl' />
	<method_environment>
	  <envvar name='PATH' value='/usr/gnu/bin:/usr/bin:/usr/sbin'/>
	  <envvar name='HOME' value='/var/db/snarl'/>
	</method_environment>
      </method_context>
    </exec_method>

    <template>
      <common_name>
        <loctext xml:lang='C'>
          Project FiFo's AAA Server.
        </loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
